{
	"manifest_version":2,
    "applications": {
        "gecko": {
            "id": "michael@colourfulbubbles_theme",
            "strict_min_version": "60.0"
        }
    },
	"name": "Colourful Bubbly",
	"description": "Based on Chromatic Flecks but as a 'light' theme",
	"version": "1.0",
    "theme": {
        "images": {
            "theme_frame": "20.jpg"
        },
        "colors": {
            "sidebar": "#f8f8f8",
            "sidebar_text": "#000000",
            "sidebar_highlight": "#0a84ff",
            "sidebar_border": "#a9b7c9",
            "tab_text": "#000000",
            "tab_background_text": "#000000",
            "tab_selected": "rgba(255, 255, 255, 0.2)",
            "toolbar": "rgba(255, 255, 255, 0.3)",
            "toolbar_text": "#000000"
        },
        "properties": {
            "color_scheme": "light",
            "content_color_scheme": "light"
        }
    }
}
